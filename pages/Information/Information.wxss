/* pages/Information/Information.wxss */
page{
  background: #f6f6f6;
  height: 100%
}
.swiper-tab{
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  font-weight: bold;
  font-size: 32rpx;
  background: #4E89D2;
  position: fixed;
  top:0;
  z-index: 999
}
.swiper-tab-item{
  display: inline-block;
  width: 33.33%;
  color:#fff;
}
.active{
  border-bottom: 4rpx solid #FFC322;
}
.info{
  display: flex;
  padding: 30rpx;
  font-size: 28rpx;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  margin-top:20rpx; 
}
.info_left{
  width: 60%;
}
.info_left view:last-child{
  color: #A8A8A8
}
.info_right{
  width: 220rpx;
  height: 150rpx;
  border-radius: 10rpx;
  background: #ccc;
}